eval "$PROLOGUE"

done=0

function check() {
    local layouter=$1
    shift 1
    [[ $# -eq 0 ]] || die "oops"
    run ./tapper --no-load-settings --no-default-assignments --$layouter --list-layouts
    egrep -e "^1:" $tmpfile.out       # We have at least one layout.
    say "â€¦ok" ""
    done=$(( done + 1 ))
}

for layouter in gnome kde xkb; do

    say "Layouter: $layouter" ""

    if [[ $layouter == "gnome" ]]; then
        if [[ -z $ENABLE_GNOME ]]; then
            say "â€¦skipped: check uses --gnome option but GNOME is disabled." ""
            continue
        fi
        if ! is_gnome_desktop; then
            say "â€¦skipped: check uses --gnome option but GNOME desktop is not detected." ""
            continue
        fi
        if ! is_agism_enabled; then
            say "â€¦skipped: check uses --gnome option but Agism GNOME extension is not detected." ""
            continue
        fi
    fi
    if [[ $layouter == "kde" ]]; then
        if [[ -z $ENABLE_KDE ]]; then
            say "â€¦skipped: check uses --kde option but KDE is disabled." ""
            continue
        fi
        if ! is_kde_desktop; then
            say "â€¦skipped: check uses --kde option but KDE desktop is not detected." ""
            continue
        fi
    fi
    if [[ $layouter == "xkb" ]]; then
        if [[ -z $WITH_X ]]; then
            say "â€¦skipped: check uses --xkb option but X Window System is disabled." ""
            continue
        fi
        if ! is_x_session; then
            say "â€¦skipped: check uses --xkb option but X session is not detected." ""
            continue
        fi
    fi

    check $layouter

done

[[ $done -gt 0 ]] || skip "All checks skipped."
say "$done checks made."

